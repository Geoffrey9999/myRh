<%= form_for :companie, url: {controller:'companies'} do |f| %>

    <%= f.label :company, "Merci d'indiquer le nom de l'entreprise" %>
    <%= f.text_field :company, :required => true  %>

    <%= f.label :town, "Merci d'y indiquer la ville" %>
    <%= f.text_field :town, :required => true %>

    <br />
    <br />
    <%= f.submit "Enregistrer", class: "btn" %>
<% end %>