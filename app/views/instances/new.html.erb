
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:inst, url: instances_path) do |f| %>

        <%= f.label :"Année de l'instance :" %>
        <%= f.select :model_year, (Time.zone.now.year)..(Time.zone.now.year + 20) %>

        <br />
        <br />

        <%= f.label :"Mois de l'instance :" %>
        <%= f.select :model_mounth, options_for_select([ "Janvier", "Fevrier", "Mars", "Avril", "Mai", "Juin", "Juillet", "Aout", "Septembre", "Octobre", "Novembre", "Decembre" ]) %>

        <br />
        <br />

        <%= f.label :entreprise %>
        <%= select_tag 'entreprise', options_for_select(@company.collect{|u| [u.company_name, u.id ]}) %>

        <br />
        <br />


        <%= f.label :ville %>
        <%= f.text_field :ville, class: 'form-control' %>


        <br />
        <br />

        <%= f.submit "Créer l'instance", class: "btn btn-success" %>
    <% end %>

  </div>
</div>